#!/bin/bash
set -eu

HERE_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
SOURCE_DIR="${HERE_DIR}/source"
CONFIG_PATH="./autogen.sh"
CONFIG_OPTIONS="--enable-static"

pushd "${SOURCE_DIR}"

if [[ "${REPAIR_TOOL}" == "extractfix" ]]; then
  COMPILE_TYPE="$1"
  CONFIG_PATH="../autogen.sh"
  CONFIG_OPTIONS="--enable-static"

  rm -rf klee
  mkdir klee
  pushd klee
fi

"${CONFIG_PATH}" ${CONFIG_OPTIONS}
