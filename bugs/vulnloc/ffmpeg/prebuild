#!/bin/bash
set -eu

HERE_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
SOURCE_DIR="${HERE_DIR}/source"
BUILD_DIR="${SOURCE_DIR}"
BUG_FILE="${HERE_DIR}/bug.json"

if [[ "${REPAIR_TOOL}" == "extractfix" ]]; then
  COMPILE_TYPE="$1"
  BUILD_DIR="${SOURCE_DIR}/klee"
fi

pushd "${BUILD_DIR}"

export CFLAGS="-std=c++1 ${CFLAGS:-}"

"${SOURCE_DIR}/configure" \
  --pkg-config-flags="--static" \
  --optflags="" \
  --enable-gpl \
  --enable-libass \
  --enable-libfdk-aac \
  --enable-libfreetype \
  --enable-libmp3lame \
  --enable-libopus \
  --enable-libtheora \
  --enable-libvorbis \
  --enable-libvpx \
  --enable-nonfree \
  --disable-muxers \
  --disable-protocols \
  --disable-devices \
  --disable-shared
