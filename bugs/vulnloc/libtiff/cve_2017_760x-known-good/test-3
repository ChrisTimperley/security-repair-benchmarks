#!/bin/bash
set -eu

HERE_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
PATH_EXPLOIT="${HERE_DIR}/exploit-3"
PATH_BIN="${1:-${HERE_DIR}/source/dbuild/tools/tiff2pdf}"

${TEST_EXECUTION_PREFIX:-} "${PATH_BIN}" "${PATH_EXPLOIT}" -o foo

x=$?

if [[ -e "${HERE_DIR}/BUG.cfg" ]]; then 
PATH_BIN="${1:-${HERE_DIR}/source/fbuild/tools/tiff2pdf}"
if [[ -e $PATH_BIN ]]; then 
${TEST_EXECUTION_PREFIX:-} "${PATH_BIN}" "${PATH_EXPLOIT}" -o foo
x=$?
fi
fi

exit $x
