FROM ubuntu:16.04


RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      autoconf \
      automake \
      autopoint \
      bison \
      build-essential \
      clang \
      cmake \
      flex \
      gettext \
      git \
      gperf \
      ipython \
      jq \
      libass-dev \
      libfdk-aac-dev \
      libfreetype6-dev \
      libjbig-dev \
      libjpeg-dev \
      liblzma-dev \
      libmp3lame-dev \
      libopus-dev \
      libtheora-dev \
      libtool \
      libvorbis-dev \
      libvpx-dev \
      nasm \
      pkg-config \
      python-dev \
      python-pip \
      python3-dev \
      python3-pip \
      rsync \
      texinfo \
      unzip \
      vim \
      zip \
      zlib1g-dev \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

RUN pip install setuptools==42.0.2 \
 && pip install wllvm==1.2.8

# more run-time dependencies for extractfix
# TODO this should be included in the ExtractFix image in the /opt/extractfix/lib/python2.7/site-packages
# directory [and added to the PYTHONPATH by the extractfix wrapper]
RUN pip install \
      coloredlogs==15.0 \
      enum==0.4.7 \
 && pip3 install \
      pyparsing==2.4.7 \
      setuptools==56.0.0 \
      z3-solver==4.8.10.0


